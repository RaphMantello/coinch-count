<%= simple_form_for [ @game, @bidding ],
    url: (@bidding.new_record? ? game_biddings_path : game_bidding_path ) do |b| %>
  <%= b.input :bid_points, collection: @bid_points_options %>
  <%= b.input :bid_color, collection: @bid_color_options %>
  <%= b.input :bid_team, collection: @bid_team_options %>
  <%= b.input :countered, collection: @countered_options %>
  <%= b.input :belote, collection: @belote_options %>
  <%= b.input :points %>

  <%= b.submit 'Fin de manche' %>
<% end %>
