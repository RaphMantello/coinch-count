<div class="container full-height">
  <div class="abs-center">
    <h2>Game #<%= @game.id %></h2>
    <table class="table">
      <thead>
        <tr>
          <th>TEAM 1</th>
          <th>TEAM 2</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @game.score_1 %></td>
          <td><%= @game.score_2 %></td>
        </tr>
      </tbody>
    </table>

    <%= link_to 'New bidding', new_game_bidding_path(@game)  %>

    <%= render 'games/bidding_table' %>

  </div>
</div>


