<div class="container full-height">
  <div class="abs-center">
    <%= @game.name %>
    <%= @game.id %>
    <table class="table">
      <thead>
        <tr>
          <th>TEAM 1</th>
          <th>TEAM 2</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @game.score_1 %></td>
          <td><%= @game.score_2 %></td>
        </tr>
      </tbody>
    </table>

    <%= link_to 'New bidding', new_game_bidding_path(@game)  %>

    <table class="table">
      <thead>
        <tr>
          <th>#</th>
          <th>Annonce</th>
          <th>Couleur</th>
          <th>Équipe</th>
          <th>Contrée/Surcontrée</th>
          <th>Belote</th>
          <th>Points</th>
          <th>Faite/Chutée</th>
        </tr>
      </thead>
      <tbody>
        <% @bid_count = @game.biddings.size %>
        <% @game.biddings.reverse.each do |bidding| %>
          <tr>
            <td><%= @bid_count %></td>
            <td><%= bidding.bid_points %></td>
            <td><%= bidding.bid_color %></td>
            <td><%= bidding.bid_team %></td>
            <td><%= bidding.countered %></td>
            <td><%= bidding.belote %></td>
            <td><%= bidding.points %></td>
            <% if bidding.bid_points <= bidding.points %>
              <td>Yes</td>
            <% else %>
              <td>No</td>
            <% end %>
          </tr>
          <% @bid_count = @bid_count - 1 %>
        <% end %>
      </tbody>
    </table>

  </div>
</div>


