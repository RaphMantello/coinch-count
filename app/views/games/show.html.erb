
<div class="home-colors">
  <div class="container full-height home-colors">
    <div class="abs-center">
      <h2>SCORES</h2>
      <table class="table">
        <thead>
          <tr>
            <th>ÉQUIPE 1</th>
            <th>ÉQUIPE 2</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @game.score_1 %></td>
            <td><%= @game.score_2 %></td>
          </tr>
        </tbody>
      </table>

        <% if @game.score_1 >= 1000 || @game.score_2 >= 1000 %>
          <h2>L'équipe <%= @winner %> remporte la partie !</h2>
          <%= link_to 'Retour home', root_path %>
        <% end %>

      <%= render 'games/bidding_table' %>

    </div>
  </div>
</div>


